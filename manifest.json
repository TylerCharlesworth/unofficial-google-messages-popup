{
  "manifest_version": 2,
  "name": "Unofficial Popup for Google Messages",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://messages.google.com/*"
  ],

  "browser_action": {
  	  "default_title": "Google Messages",
      "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_security_policy": "script-src 'self' https://messages.google.com/web; object-src 'self'"
}
